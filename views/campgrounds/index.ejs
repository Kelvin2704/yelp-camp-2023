<% layout('./layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<section>
  <a href="/campgrounds/new">ADD NEW CAMPGROUND</a>
</section>
<div class="container">
  <div class="row row-cols-2">
    <% for (let campground of campgrounds) { %>
    <div class="col">
      <div class="card mb-3" style="height: 250px">
        <div class="row">
          <div class="col-md-6">
            <% if(campground.images.length) { %>
            <img
             crossorigin="anonymous"
              class="img-fluid"
              src="<%=campground.images[0].url %>"
              alt=""
            />
            <% } else { %>
            <img
             crossorigin="anonymous"
              class="img-fluid"
              src="https://res.cloudinary.com/dx8cwnjge/image/upload/v1691430026/YelpCamp/wztkunphgeqnrzlsgvq0.jpg"
              alt=""
            />
            <% } %>
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h2 class="card-title"><%= campground.title %></h2>
              <p class="card-text">
                <%=campground.description.substring(0,30) %>...
              </p>
              <p class="card-text"><%=campground.location %></p>
              <a
                class="btn btn-primary"
                href="/campgrounds/<%= campground._id %>"
                >More details</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <% } %>
  </div>
</div>
<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/js/clusterMap.js"></script>
